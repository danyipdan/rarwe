<ul class='rr-list'>
  {{#each this.model.songs as |song|}}
    <li class='rr-list-item'>
      {{song.title}}
      {{song.rating}}
      <StarRating 
        class='fr' 
        @rating={{song.rating}} 
        @item={{song}} 
        @updateStar={{this.updateStar}} 
        />
    </li>
  {{else}}
    <li class='tc'>
      No
      {{this.model.name}}
      songs yet, why don't you <a href="#" {{on 'click' this.addSong}}>create one?</a> 
    </li>
  {{/each}}
</ul>
<div class='rr-new-label'>
  {{#if this.isAddingSong}}
    <form class='rr-inline-form' {{on 'submit' this.saveSong}}>
      <input
        type='text'
        class='rr-input'
        value={{this.newSongTitle}}
        {{on 'input' this.updateSongTitle}}
        placeholder='New Song'
      />
      <button
        type='submit'
        class='rr-action-button'
        disabled={{this.isAddButtonDisabled}}
      >
        Add
      </button>
      
      <button
        class='rr-cancel-icon' onclick={{action 'cancelAddSong'}} type="submit"
      >
        Cancel
      </button>
    </form>
  {{else}}
    <label {{on 'click' this.addSong}}>
      +
      <span class='ml1'>Add new song</span>
    </label>
  {{/if}}
</div>